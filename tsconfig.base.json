{
  "compilerOptions": {
    "composite": true,
    "lib": ["es5", "es6", "es2017", "es2019", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    /* Dont fail over type things in node_modules */
    "skipLibCheck": true,
    
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2021",
    "types": ["node", "jest"]
  }
}
