{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es5", "es6", "es2017", "es2019", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  }
}
