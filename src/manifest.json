{
  "description": "Selenium Record and Playback tool for ease of getting acquainted with Selenium WebDriver.",
  "manifest_version": 2,
  "name": "Selenium IDE",
  "version": "1.0",
  "homepage_url": "https://github.com/SeleniumHQ/selenium-ide",

  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Selenium IDE"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "contextMenus",
    "downloads",
    "webNavigation",
    "notifications"
  ],

  "web_accessible_resources": [
    "icons/icon.png",
    "prompt.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "match_about_blank": true,
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["polyfills.js", "start.js"],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background":
  {
    "scripts": ["polyfills.js", "background.js"]
  }
}
