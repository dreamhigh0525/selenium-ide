{
  "description": "Selenium Record and Playback tool for ease of getting acquainted with Selenium WebDriver.",
  "manifest_version": 2,
  "name": "Selenium IDE",
  "version": "1.0",
  "homepage_url": "https://github.com/SeleniumHQ/selenium-ide",

  "icons": {
    "48": "icons/icon-big.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Selenium IDE"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "contextMenus",
    "downloads",
    "webNavigation",
    "notifications",
    "storage"
  ],

  "web_accessible_resources": [
    "icons/icon.png",
    "assets/prompt.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/vendor/global.js", "assets/polyfills.js", "assets/vendor/utils.js", "assets/escape.js", "assets/injector.js", "assets/record.js"],
      "match_about_blank": true,
      "all_frames": true
    }
  ],
  "background":
  {
    "scripts": ["assets/background.js"]
  }
}
