{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Selenium IDE",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "preLaunchTask": "stop chromedriver",
        "postDebugTask ": {
          "task": "stop chromedriver"
        },
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "environment": [
        { "name": "ELECTRON_RUN_AS_NODE", "value": "" },
        { "name": "NODE_DEBUG", "value": "api,webdriver" },
        { "name": "NODE_OPTIONS", "value": "--no-warnings" },
        { "name": "SIDE_DEBUG", "value": "true" }
      ],
      "args": ["--trace-uncaught", "${workspaceFolder}/build/main-bundle.js"],
      "outputCapture": "std",
      "webRoot": "${workspaceFolder}/build",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack://?:*/*": "${workspaceFolder}/*"
      }
    }
  ]
}
